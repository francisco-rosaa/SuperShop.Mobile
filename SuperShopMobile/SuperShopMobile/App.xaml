    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    x:Class="SuperShopMobile.App">
    <Application.Resources>
        <!-- Application resource dictionary -->
        <ResourceDictionary>
            <!-- Parameters -->
            <x:String x:Key="ApiBaseUrl">https://supershop9.azurewebsites.net/</x:String>
            <x:String x:Key="ApiServicePrefix">/api</x:String>
            <x:String x:Key="ApiProductsController">/products</x:String>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
